            <div class="token token-cross"></div>
        </div>
        <div class="board-item item-top-right">
            <div class="token token-cross"></div>
        </div>
        <div class="board-item item-middle-left">
            <div class="token token-cross"></div>
        </div>
        <div class="board-item item-middle-middle">
            <div class="token token-cross"></div>
        </div>
        <div class="board-item item-middle-right">
            <div class="token token-cross"></div>
        </div>
        <div class="board-item item-bottom-left">
            <div class="token token-cross"></div>
        </div>
